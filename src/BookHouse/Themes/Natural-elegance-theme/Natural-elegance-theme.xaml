<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Image}">
        <Setter Property="Stretch" Value="None"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="main-window-style" TargetType="{x:Type Window}" >
        <Setter Property="Background" Value="#2F0602" />
    </Style>
    <Style x:Key="header-stack-panel"  TargetType="{x:Type StackPanel}">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="naglowek.png"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="right-pane-stack-panel"  TargetType="{x:Type StackPanel}">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="boczne-3.png"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="right-top-stack-panel"  TargetType="{x:Type StackPanel}">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="boczne-1.png"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="right-bottom-stack-panel"  TargetType="{x:Type StackPanel}">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="boczne-2.png"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="add-book-button" TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="161"/>
        <Setter Property="Height" Value="41"/>
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Image Source="addposition-normal.png"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Image Source="addposition-highligh.png"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
